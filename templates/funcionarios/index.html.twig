{% extends 'base.html.twig' %}

{% block title %}Funcionarios index{% endblock %}

{% block body %}
    <h1>Funcionarios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>DataNascimento</th>
                <th>DataAdmissao</th>
                <th>Sexo</th>
                <th>TelefoneCelular</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.dataNascimento ? funcionario.dataNascimento|date('Y-m-d') : '' }}</td>
                <td>{{ funcionario.dataAdmissao ? funcionario.dataAdmissao|date('Y-m-d') : '' }}</td>
                <td>{{ funcionario.sexo }}</td>
                <td>{{ funcionario.telefoneCelular }}</td>
                <td>
                    <a href="{{ path('funcionarios_show', {'id': funcionario.id}) }}">show</a>
                    <a href="{{ path('funcionarios_edit', {'id': funcionario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('funcionarios_new') }}">Create new</a>
{% endblock %}
