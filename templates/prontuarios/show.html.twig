{% extends 'base.html.twig' %}

{#{% block title %}Prontuarios{% endblock %}#}

{% block body %}
    {#    <h1>Prontuarios</h1>#}
    <div class="page-header">
        <h1>
            <span class="text-muted font-weight-light">Prontuário / </span>Visualizar Prontuário
        </h1>
    </div>
    <div class="main-card mb-3 card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ prontuario.id }}</td>
                </tr>
                <tr>
                    <th>Descrição</th>
                    <td>{{ prontuario.dsProntuario }}</td>
                </tr>
                <tr>
                    <th>Data</th>
                    <td>{{ prontuario.data ? prontuario.data|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Paciente</th>
                    <td>{{ prontuario.idpacientes }}</td>
                </tr>
                <tr>
                    <th>Laudo</th>
                    <td>{{ prontuario.laudos }}</td>
                </tr>
                </tbody>
            </table>
            <hr>
            <a class="btn btn-secondary" href="{{ path('prontuarios_index') }}">Voltar à Lista</a>

            <a class="btn btn-primary" href="{{ path('prontuarios_edit', {'id': prontuario.id}) }}">Editar</a>
        </div>
    </div>
    {#    {{ include('prontuarios/_delete_form.html.twig') }}#}
{% endblock %}
