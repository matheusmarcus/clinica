{% extends 'base.html.twig' %}

{% block title %}Acesso index{% endblock %}

{% block body %}
    <h1>Acesso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acesso in acessos %}
            <tr>
                <td>{{ acesso.id }}</td>
                <td>{{ acesso.usuario }}</td>
                <td>{{ acesso.password }}</td>
                <td>
                    <a href="{{ path('acesso_show', {'id': acesso.id}) }}">show</a>
